<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toast_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_toast">

    <TextView
        android:id="@+id/textView_toast_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/normal_font"
        android:textColor="@color/small_text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewDeleteCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewDeleteCategory"
        app:layout_constraintTop_toTopOf="@+id/imageViewDeleteCategory"
        tools:text="Toast message" />

    <ImageView
        android:id="@+id/imageViewDeleteCategory"
        android:layout_width="30dp"
        app:tint="@color/colorPrimaryDark"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:contentDescription="TODO" />
</androidx.constraintlayout.widget.ConstraintLayout>
