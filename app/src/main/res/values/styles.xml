<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigTextStyle">
        <item name="android:textColor">@color/big_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/big_font</item>
    </style>

    <style name="MediumTextStyle">
        <item name="android:textColor">@color/big_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/small_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/normal_font</item>
    </style>
</resources>
